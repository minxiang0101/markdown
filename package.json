{
  "name": "md-preview-tool",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Markdown 预览工具 - 基于 Electron + React + Vite 的桌面应用",
  "author": "Your Name",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "tsc && vite build && vite build --config electron.vite.config.ts",
    "build:renderer": "vite build",
    "build:electron": "vite build --config electron.vite.config.ts",
    "build:all": "yarn build && electron-builder",
    "build:win": "yarn build && electron-builder --win",
    "build:mac": "yarn build && electron-builder --mac",
    "build:linux": "yarn build && electron-builder --linux",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chokidar": "^2.1.3",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "dompurify": "^3.0.6",
    "electron": "^25.9.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fast-check": "^3.15.0",
    "highlight.js": "^11.9.0",
    "jsdom": "^28.0.0",
    "marked": "^11.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  }
}
